@model IEnumerable<UserLoginHistory>
@if (User.HasClaim("Permission", "UserLoginHistory.View"))
{


<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>User Login History</h1>

	</div>

	<div class="table-responsive">
		<table id="categoryTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="35%">
						Username
					</th>
					<th width="50%">
						Login time
					</th>
					<th width="50%">
						Logout time
					</th>


				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.User.UserName
						</td>
						<td>
							@item.LoginTime
						</td>
						<td>
							@item.LogoutTime
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

}