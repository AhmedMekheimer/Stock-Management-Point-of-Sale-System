@model List<Discount>
@if (User.HasClaim("Permission", "Discount.View"))
{


<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>Discounts</h1>
		@if (User.HasClaim("Permission", "Discount.Add"))
		{
			<div class="col-md-2 d-flex justify-content-end align-items-center">
				<a asp-action="Save" class="btn btn-primary">Add</a>
			</div>
		}
	</div>

	<div class="table-responsive">
		<table id="categoryTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="30%">
						Name
					</th>
					<th width="10%">
						Rate (%)
					</th>
					<th width="10%">
						Status
					</th>
					<th width="10%">
						Expiration Date
					</th>
					<th width="10%">
						No. Uses
					</th>
					<th width="10%">
						Maximum Uses
					</th>
					<th width="20%">
						Actions
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.Rate
						</td>

						@if (item.IsActive)
						{
							<td>
								Active
							</td>
						}
						else
						{
							<td>
								Expired
							</td>
						}

						@if (item.ExpirationDate is not null)
						{
							<td>
								@item.ExpirationDate
							</td>
						}
						else
						{
							<td>
								Unspecified
							</td>
						}

						<td>
							@item.CurrentUses
						</td>

						@if (item.MaximumUses != 0)
						{
							<td>
								@item.MaximumUses
							</td>
						}
						else
						{
							<td>
								Unspecified
							</td>
						}

						<td>
							<div class="d-flex gap-2">

									@if (User.HasClaim("Permission", "Discount.Edit"))
									{
										<a asp-action="Save" asp-route-id="@item.Id" class="btn btn-sm btn-info">
											Edit
										</a>
									}

									@if (User.HasClaim("Permission", "Discount.Delete"))
									{
										<button type="button" class="btn btn-sm btn-danger"
												data-bs-toggle="modal"
												data-bs-target="#confirmDeleteModal"
												data-id="@item.Id"
												data-name="@item.Name">
											Delete
										</button>
									}

							</div>
						</td>

					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<partial name="Delete" />

@section Scripts {
	<script>
		$('#confirmDeleteModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);

			var Id = button.data('id');
			var Name = button.data('name');

			$(this).find('#Name').text(Name);
			$(this).find('#IdToDelete').val(Id);
		});

		$('#confirmDeleteButton').on('click', function () {
			$('#deleteUser').submit();
		});
	</script>
}

}