@model IEnumerable<IdentityRole>


@if (User.HasClaim("Permission", "Role.View"))
{

<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>Roles</h1>	
	</div>

	@if (User.HasClaim("Permission", "Role.Add"))
	{
		<p>
			<a asp-action="Save" class="btn btn-primary">Add</a>
		</p>
	}

	<div class="table-responsive">
		<table id="categoryTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="90%">
						Roles
					</th>
						<th width="10%">
							Action
						</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr >
						<td>
							@item.Name
						</td>
						
								<td>
								@if (User.HasClaim("Permission", "Role.Edit"))
								{
									<a asp-action="Save" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
								}
								@if (User.HasClaim("Permission", "Role.Delete") && item.Name != "Super Admin")
									{
									<button type="button" class="col-4 btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-id="@item.Id" data-name="@item.Name">Delete</button>
									}
								</td>
						
						</tr>
				}
			</tbody>
		</table>
	</div>
</div>

	<partial name="Delete" />



	@section Scripts {
		<script>
			$('#confirmDeleteModal').on('show.bs.modal', function (event) {
				var button = $(event.relatedTarget);
				console.log(123);
				var Id = button.data('id');
				var Name = button.data('name');

				$(this).find('#Name').text(Name);
				$(this).find('#IdToDelete').val(Id);
			});

			$('#confirmDeleteButton').on('click', function () {
				$('#deleteUser').submit();
			});
		</script>
	}

}

