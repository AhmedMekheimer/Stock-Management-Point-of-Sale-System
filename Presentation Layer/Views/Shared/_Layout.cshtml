@using CoreLayer
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="~/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/img/favicon.png">
    <title>
        Stock Management & Point-Of-Sale System
    </title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,900" />
    <!-- Nucleo Icons -->
    <link href="~/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!-- CSS Files -->
    <link id="pagestyle" href="~/css/material-dashboard.css?v=3.2.0" rel="stylesheet" />
    <link id="pagestyle" href="~/css/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>

<body class="g-sidenav-show  bg-gray-100">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-radius-lg fixed-start ms-2  bg-white my-2" id="sidenav-main">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-dark opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
            <a class="navbar-brand px-4 py-3 m-0" asp-area="DashBoard" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-ct-dark.png" class="navbar-brand-img" width="26" height="26" alt="main_logo">
                <span class="ms-1 text-sm text-dark">Dashboard</span>
            </a>

        </div>
        <hr class="horizontal dark mt-0 mb-2">

        <div class="collapse navbar-collapse w-auto " id="sidenav-collapse-main">

            <ul class="navbar-nav">
                @if (User.HasClaim("Permission", "Administrative"))
                {
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Administrative</h6>
                    </li>

                    @if (User.HasClaim("Permission", "User"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="User" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">group</i>
                                <span class="nav-link-text ms-1">Users</span>
                            </a>
                        </li>
                    }
                    @if (User.HasClaim("Permission", "Role"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="Role" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">person_add</i>
                                <span class="nav-link-text ms-1">Roles</span>
                            </a>
                        </li>
                    }

                    @* @if (User.HasClaim("Permission", "Setting"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="Setting" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">settings</i>
                                <span class="nav-link-text ms-1">Settings</span>
                            </a>
                        </li>
                    } *@

                    @if (User.HasClaim("Permission", "Partner"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="Partner" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">handshake</i>
                                <span class="nav-link-text ms-1">Partners</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "Tax"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="Tax" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">paid</i>
                                <span class="nav-link-text ms-1">Taxes</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "Discount"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="Discount" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">sell</i>
                                <span class="nav-link-text ms-1">Discounts</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "UserLoginHistory"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Administrative" asp-controller="UserLoginHistory" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">history</i>
                                <span class="nav-link-text ms-1">User Login History</span>
                            </a>
                        </li>
                    }
                }
                @if (User.HasClaim("Permission", "Branch"))
                {
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Branch</h6>
                    </li>

                    @if (User.HasClaim("Permission", "Stock"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Branch" asp-controller="Branch" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">storefront</i>
                                <span class="nav-link-text ms-1">Branches</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "ReceiveOrder"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Branch" asp-controller="ReceiveOrder" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">receipt_long</i>
                                <span class="nav-link-text ms-1">Receive Order</span>
                            </a>
                        </li>
                    }
                }
                @if (User.HasClaim("Permission", "Item"))
                {
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Item Management</h6>
                    </li>

                    @if (User.HasClaim("Permission", "ClothingItem"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="ClothingItem" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">styler</i>
                                <span class="nav-link-text ms-1">Clothing Items</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "Brand"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="Brand" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">label</i>
                                <span class="nav-link-text ms-1">Brands</span>
                            </a>
                        </li>
                    }
                    @if (User.HasClaim("Permission", "Color"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="Color" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">palette</i>
                                <span class="nav-link-text ms-1">Colors</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "ItemType"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="ItemType" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">category</i>
                                <span class="nav-link-text ms-1">Item Types</span>
                            </a>
                        </li>
                    }
                    @if (User.HasClaim("Permission", "Size"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="Size" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">straighten</i>
                                <span class="nav-link-text ms-1">Sizes</span>
                            </a>
                        </li>
                    }

                    @if (User.HasClaim("Permission", "TargetAudience"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Item" asp-controller="TargetAudience" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">diversity_3</i>
                                <span class="nav-link-text ms-1">Target Audiences</span>
                            </a>
                        </li>
                    }
                }

                @if (User.HasClaim("Permission", "Sales"))
                {
                    <li class="nav-item mt-3">
                        <h6 class="ps-4 ms-2 text-uppercase text-xs text-dark font-weight-bolder opacity-5">Sales</h6>
                    </li>

                    @if (User.HasClaim("Permission", "POS"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Sales" asp-controller="PosApi" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">point_of_sale</i>
                                <span class="nav-link-text ms-1">Point of Sale</span>
                            </a>
                        </li>
                    }
                    @if (User.HasClaim("Permission", "SalesInvoice"))
                    {

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Sales" asp-controller="SalesInvoices" asp-action="Index">
                                <i class="material-symbols-rounded opacity-5">receipt_long</i>
                                <span class="nav-link-text ms-1">Sales Invoices</span>
                            </a>
                        </li>
                    }
                }

            </ul>
        </div>

    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg" style="margin-right:10px !important;">
        <!-- Navbar -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-3 shadow-none border-radius-xl" id="navbarBlur" data-scroll="true" style="padding-bottom: 0px !important;">
            <div class="container-fluid py-1 px-3">
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <ul class="navbar-nav d-flex align-items-center justify-content-end ms-auto">
                        <li class="nav-item">
                            <ul class="d-flex gap-3 p-0">
                                <li class="nav-item d-flex align-items-center">
                                    <a asp-area="Identity" asp-controller="Account" asp-action="ProfileEdit" class="nav-link text-body font-weight-bold px-0">
                                        <i class="material-symbols-rounded">account_circle</i>
                                    </a>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <a asp-area="Identity" asp-controller="Account" asp-action="Logout" class="nav-link text-body font-weight-bold px-0">
                                        <i class="material-symbols-rounded">Logout</i>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- End Navbar -->
        @RenderBody()
    </main>
    <div class="fixed-plugin">
        <a class="fixed-plugin-button text-dark position-fixed px-3 py-2">
            <i class="material-symbols-rounded py-2">settings</i>
        </a>
        <div class="card shadow-lg">
            <div class="card-header pb-0 pt-3">

                <div class="float-end mt-4">
                    <button class="btn btn-link text-dark p-0 fixed-plugin-close-button">
                        <i class="material-symbols-rounded">clear</i>
                    </button>
                </div>
                <!-- End Toggle Button -->
            </div>
            <div class="card-body pt-sm-3 pt-0">
                <!-- Sidenav Type -->
                <div class="mt-3">
                    <h6 class="mb-0">Sidenav Type</h6>
                    <p class="text-sm">Choose between different sidenav types.</p>
                </div>
                <div class="d-flex">
                    <button class="btn bg-gradient-dark px-3 mb-2" data-class="bg-gradient-dark" onclick="sidebarType(this)">Dark</button>
                    <button class="btn bg-gradient-dark px-3 mb-2 ms-2" data-class="bg-transparent" onclick="sidebarType(this)">Transparent</button>
                    <button class="btn bg-gradient-dark px-3 mb-2  active ms-2" data-class="bg-white" onclick="sidebarType(this)">White</button>
                </div>
                <p class="text-sm d-xl-none d-block mt-2">You can change the sidenav type just on desktop view.</p>
            </div>
        </div>
    </div>

    <!--   Core JS Files   -->
    <script src="~/js/core/popper.min.js"></script>
    <script src="~/js/core/bootstrap.min.js"></script>
    <script src="~/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/js/plugins/smooth-scrollbar.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
          var options = {
            damping: '0.5'
          }
          Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/js/material-dashboard.min.js?v=3.2.0"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/toastr.min.js"></script>
    <script>
        @if (TempData["Success"] != null)
        {
                <text>
                    toastr.success("@TempData["Success"].ToString()");
                </text>
        }
        @if (TempData["Error"] != null)
        {
                <text>
                    toastr.error("@TempData["Error"].ToString()");
                </text>
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>