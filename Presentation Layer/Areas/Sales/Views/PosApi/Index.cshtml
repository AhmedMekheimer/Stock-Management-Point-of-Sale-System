@{
    ViewData["Title"] = "Point Of Sale";
}

<div class="pos-container">
    <!-- Left Panel (30%) -->
    <div class="left-panel">
        <!-- Branch/User Info -->
        <div class="branch-user-box">
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-store me-2"></i>
                <span>Branch: </span>
                <select id="branchesList">

                </select>
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-user me-2"></i>
                <span id="cashier"></span>
            </div>
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-user me-2"></i>
                <span>Customer: </span>
                <select id="customersList">

                </select>
            </div>
        </div>

        <!-- Cart Section -->
        <div class="cart-section">
            <div class="section-header d-flex justify-content-between align-items-center">
                <span>Items</span>
                <button class="btn btn-sm btn-outline-danger" id="clearCartBtn">
                    <i class="fas fa-trash"></i> Clear
                </button>
            </div>
            <div class="section-body" id="cartItems">
                <!-- Cart items will be dynamically added here -->
            </div>
            <div class="section-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="small text-muted">Total Quantity</div>
                        <div id="totalQty" class="fw-semibold">0</div>
                    </div>
                    <div class="text-end">
                        <div class="small text-muted">Total Amount (EGP)</div>
                        <div id="totalAmount" class="fw-semibold">0.00</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Discounts Section -->
        <div class="discounts-section">
            <div class="section-header d-flex justify-content-between align-items-center">
                <span>Discounts</span>
@*                 <button class="btn btn-sm btn-outline-danger" id="clearDiscountBtn">
                    <i class="fas fa-trash"></i> Clear
                </button> *@
            </div>
            <div class="section-body" id="discountsList">
                <!-- Discounts will be dynamically added here -->
            </div>
            <div class="section-footer">
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="small text-muted">Total Discount Rate</div>
                        <div id="totalDiscountRate" class="fw-semibold">0%</div>
                    </div>
                    <div class="text-end">
                        <div class="small text-muted">Total Discount (EGP)</div>
                        <div id="totalDiscountAmount" class="fw-semibold">0.00</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Totals Section -->
        <div class="totals-section">
            <div class="d-flex justify-content-between mb-2">
                <div class="text-muted">Grand Total</div>
                <div id="grandTotal" class="fw-bold">0.00 EGP</div>
            </div>
            <div class="d-flex justify-content-between mb-3">
                <div class="text-muted">Rounded Grand Total</div>
                <div id="roundedTotal" class="fw-bold">0.00 EGP</div>
            </div>
            <button class="btn btn-success checkout-btn">
                <i class="fas fa-check-circle me-2"></i> Checkout
            </button>
        </div>
    </div>

    <!-- Checkout Confirmation Modal -->
    <div class="modal fade" id="checkoutModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Checkout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Receipt details will be injected here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="confirmCheckoutBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>



    <!-- Right Panel (70%) -->
    <div class="right-panel">
        <!-- Barcode Input -->
        <div class="barcode-box">
            <label for="barcodeInput" class="form-label">
                <i class="fas fa-barcode me-1"></i> Barcode Scanner
            </label>
            <input type="text" class="form-control" id="barcodeInput" placeholder="Scan or enter barcode">
        </div>

        <!-- Item Types -->
        <div class="item-types-row">
            <!-- Item types will be dynamically added here -->
        </div>

        <!-- Items Grid -->
        <div class="items-grid-container">
            <div class="items-grid">
                <!-- Items will be dynamically added here -->
            </div>
        </div>
    </div>
</div>

<!-- Quantity Modal Pop-Up -->
<div class="modal fade" id="quantityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalItemName">Item Name</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="quantityInput" class="form-label">Quantity</label>
                    <input type="number" class="form-control" id="quantityInput" value="1" min="1">
                </div>
                <div class="d-flex justify-content-between">
                    <span>Price:</span>
                    <span id="modalItemPrice">0.00 EGP</span>
                </div>
                <div class="d-flex justify-content-between mt-2">
                    <span>Available:</span>
                    <span id="modalAvailableQty">0</span>
                </div>
                <div class="d-flex justify-content-between mt-2 fw-bold">
                    <span>Total:</span>
                    <span id="modalItemTotal">0.00 EGP</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addToCartBtn">Add to Cart</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/pos.js"></script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/pos.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
}
