@model List<Discount>

<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>Discounts</h1>

		<p>
			<a asp-action="Save" class="btn btn-primary">Add</a>
		</p>

	</div>

	<div class="table-responsive">
		<table id="categoryTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="30%">
						Name
					</th>
					<th width="10%">
						Rate (%)
					</th>
					<th width="10%">
						Raw Value (EGP)
					</th>
					<th width="10%">
						Status
					</th>
					<th width="10%">
						Expiration Date
					</th>
					<th width="10%">
						No. Uses
					</th>
					<th width="10%">
						Maximum Uses
					</th>
					<th width="20%">
						Actions
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.Rate
						</td>
						<td>
							@item.RawValue
						</td>

						@if (item.IsActive)
						{
							<td>
								Active
							</td>
						}
						else
						{
							<td>
								Expired
							</td>
						}

						@if (item.ExpirationDate is not null)
						{
							<td>
								@item.ExpirationDate
							</td>
						}
						else
						{
							<td>
								Unspecified
							</td>
						}

						<td>
							@item.CurrentUses
						</td>

						@if (item.MaximumUses != 0)
						{
							<td>
								@item.MaximumUses
							</td>
						}
						else
						{
							<td>
								Unspecified
							</td>
						}

						<td>
							<div class="d-flex gap-2">
								<a asp-action="Save" asp-route-id="@item.Id" class="btn btn-sm btn-info">
									Edit
								</a>

								<button type="button" class="btn btn-sm btn-danger"
										data-bs-toggle="modal"
										data-bs-target="#confirmDeleteModal"
										data-id="@item.Id"
										data-name="@item.Name">
									Delete
								</button>
							</div>
						</td>

					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<partial name="Delete" />

@section Scripts {
	<script>
		$('#confirmDeleteModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);

			var Id = button.data('id');
			var Name = button.data('name');

			$(this).find('#Name').text(Name);
			$(this).find('#IdToDelete').val(Id);
		});

		$('#confirmDeleteButton').on('click', function () {
			$('#deleteUser').submit();
		});
	</script>
}