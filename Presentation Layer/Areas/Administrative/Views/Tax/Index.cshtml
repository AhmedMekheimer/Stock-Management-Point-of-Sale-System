@model List<Tax>
@if (User.HasClaim("Permission", "Tax.Add"))
{
    <div class="p-3">

        <div class="d-flex justify-content-between">
            <h1>Taxes</h1>

            @if (User.HasClaim("Permission", "Tax.Add"))
            {
                <p>
                    <a asp-action="Save" class="btn btn-primary">Add</a>
                </p>
            }

        </div>

        <div class="table-responsive">
            <table id="categoryTable" class="table table-striped  table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th width="50%">
                            Name
                        </th>
                        <th width="15%">
                            Rate (%)
                        </th>
                        <th width="15%">
                            Raw Value (EGP)
                        </th>
                        <th width="20%">
                            Actions
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Rate
                            </td>


                            <td>
                                <div class="d-flex gap-2">

                                    @if (User.HasClaim("Permission", "Tax.Edit"))
                                    {
                                        <a asp-action="Save" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            Edit
                                        </a>
                                    }


                                    @if (User.HasClaim("Permission", "Tax.Delete"))
                                    {

                                        <button type="button" class="btn btn-sm btn-danger"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmDeleteModal"
                                                data-id="@item.Id"
                                                data-name="@item.Name">
                                            Delete
                                        </button>
                                    }

                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <partial name="Delete" />

    @section Scripts {
        <script>
            $('#confirmDeleteModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);

                var Id = button.data('id');
                var Name = button.data('name');

                $(this).find('#Name').text(Name);
                $(this).find('#IdToDelete').val(Id);
            });

            $('#confirmDeleteButton').on('click', function () {
                $('#deleteUser').submit();
            });
        </script>
    }

}