@model List<Item>

<div class="p-3">

	<div class="d-flex justify-content-between">
		<h1>Clothing Items</h1>

		<p>
			<a asp-action="Save" class="btn btn-primary">Add</a>
		</p>

	</div>

	<div class="table-responsive">
		<table id="categoryTable" class="table table-striped  table-bordered">
			<thead class="thead-dark">
				<tr>
					<th width="20%">
						Name
					</th>
					<th width="10%">
						Brand
					</th>
					<th width="10%">
						Color
					</th>
					<th width="10%">
						Clothing Type
					</th>
					<th width="10%">
						Size
					</th>
					<th width="10%">
						For
					</th>
					<th width="10%">
						Price
					</th>
					<th width="10%">
						Actions
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Name
						</td>
						<td>
							@item.Brand
						</td>
						<td>
							@item.Color
						</td>
						<td>
							@item.ItemType
						</td>
						<td>
							@item.Size
						</td>
						<td>
							@item.TargetAudience
						</td>
						<td>
							@item.Price
						</td>

						<td class="row gap-1">
							<a asp-action="Save" asp-route-id="@item.Id" class="col-3 btn btn-sm btn-info">
								Edit
							</a>

							<button type="button" class="col-4 btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-id="@item.Id" data-name="@item.Name">
								Delete
							</button>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

<partial name="Delete" />

@section Scripts {
	<script>
		$('#confirmDeleteModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget);

			var Id = button.data('id');
			var Name = button.data('name');

			$(this).find('#Name').text(Name);
			$(this).find('#IdToDelete').val(Id);
		});

		$('#confirmDeleteButton').on('click', function () {
			$('#deleteUser').submit();
		});
	</script>
}