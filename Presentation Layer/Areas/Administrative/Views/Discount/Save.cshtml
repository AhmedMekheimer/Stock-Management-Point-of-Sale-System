@model Discount

<div class="container">
	<div class="card shadow-lg border-0 rounded-4">
		<div class="card-body p-4">
			@if (Model.Id == 0)
			{
				<h4 class="mb-4">Add Discount</h4>
			}
			else
			{
				<h4 class="mb-4">Edit Discount</h4>
			}

			<form asp-action="Save" method="post">
				<div class="row">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<input asp-for="Id" type="hidden" />

					<!-- Discount Name -->
					<div class="mb-3 col-4">
						<label asp-for="Name" class="form-label">Discount Name</label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>

					<!-- Discount Rate -->
					<div class="mb-3 col-4">
						<label asp-for="Rate" class="form-label">Discount Rate(%)</label>
						<input asp-for="Rate" class="form-control" />
						<span asp-validation-for="Rate" class="text-danger"></span>
					</div>

					<!-- Discount Status -->
					<div class="form-group mb-3">
						<label asp-for="IsActive" class="form-label">Status</label>
						<select class="form-select" asp-for="IsActive" required>
							@if (Model.Id == 0)
							{
								<option value="true">Active</option>
								<option value="false">Expired</option>
								<option value="" selected>-- Choose Status --</option>
							}
							else
							{
								<option value="true" selected="@(Model.IsActive)">Active</option>
								<option value="false" selected="@(!Model.IsActive)">Expired</option>
							}
						</select>
					</div>


					<!-- Discount Expiration Date -->
					<div class="mb-3 col-4">
						<label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
						<input asp-for="ExpirationDate" type="date" class="form-control" />
						<span asp-validation-for="ExpirationDate" class="text-danger"></span>
					</div>


					<!-- Discount Maximum Uses -->
					<div class="mb-3 col-4">
						<label asp-for="MaximumUses" class="form-label">Maximum Uses</label>
						<input asp-for="MaximumUses" class="form-control" />
						<span asp-validation-for="MaximumUses" class="text-danger"></span>
					</div>

					<div class="form-actions mt-3">
						<button type="submit" class="btn btn-primary btn-sm">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}